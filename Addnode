void add_node_to_network()
{
//calling serial init
	char value[]={0x01,0x05,0x00,0x4A,0X01,0X01,0XB0};
	n=write(fd,value,sizeof(value));
	while(1)
    	{
        	if (buff)
		{
			ret_bytes=read(fd,  &buff, 255);
			if(ret_bytes==22)
			{	
				flag=1;
			}
		}
		sleep (1); 
		if (ret_bytes <=0) break ;
	}
	if(flag==1)
	{
		flag=0;
		printf("\nNode successfully added\nNode ID:%d",*((char *) &buff+6));
	}
   	close(fd);  
}
